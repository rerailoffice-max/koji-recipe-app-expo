{
  "expo": {
    "name": "こうじレシピ",
    "slug": "koji-recipe-app-expo",
    "version": "1.0.0",
    "description": "麹レシピを、AIと。毎日の料理を麹で美味しく、健康に。",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "kojirecipeappexpo",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.gochisokoji.kojirecipe"
    },
    "android": {
      "package": "com.gochisokoji.kojirecipe",
      "adaptiveIcon": {
        "backgroundColor": "#F7F1E7",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "bundler": "metro",
      "name": "こうじレシピ",
      "shortName": "こうじレシピ",
      "description": "麹レシピを、AIと。毎日の料理を麹で美味しく、健康に。",
      "lang": "ja",
      "display": "standalone",
      "orientation": "portrait",
      "themeColor": "#BFAB90",
      "backgroundColor": "#F7F1E7",
      "favicon": "./assets/images/favicon.png",
      "startUrl": "/",
      "scope": "/"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#F7F1E7",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "apiBaseUrl": "https://api.gochisokoji.com"
    }
  }
}
